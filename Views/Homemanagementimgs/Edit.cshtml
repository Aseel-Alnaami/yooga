@model yogago.Models.Homemanagementimg

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Homemanagementimg</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Imgid" />
            <div class="form-group">
                <label asp-for="Imgname" class="control-label"></label>
                <input asp-for="Imgname" class="form-control" />
                <span asp-validation-for="Imgname" class="text-danger"></span>
            </div>
         @*    <div class="form-group">
                <label asp-for="Imgpath" class="control-label"></label>
                <input asp-for="Imgpath" class="form-control" />
                <span asp-validation-for="Imgpath" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label>Current Picture</label>
                @if (!string.IsNullOrEmpty(Model.Imgpath))
                {
                    <img src="@Model.Imgpath" alt="Profile picture of @Model.Imgname" style="width: 100px; height: 100px; object-fit: cover;" />
                }
                else
                {
                    <span>No Image Uploaded</span>
                }
            </div>

            <div class="form-group">
                <label asp-for="Imgfile" class="control-label"></label>
                <input asp-for="Imgfile" type="file" class="form-control" />
                <span asp-validation-for="Imgfile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
