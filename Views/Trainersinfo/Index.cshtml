@model IEnumerable<yogago.Models.Userinfo>


@{
    Layout = "~/Views/Shared/_Admin.cshtml";

}





<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <div class="row">
                <div class="container-scroller" style="background-color: #f2edf3;">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Members Profiles</h4>


                                <p class="card-description">
                                    Add Member <code>
                                        <a class="mdi mdi-logout me-2 text-primary" asp-action="Create">Create New</a>
                                    </code>
                                </p>
                                <div class="table-responsive">
                                    <table class="table ">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Profilepicture)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Fullname)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Username)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Email)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Phone)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Dateofbirth)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Address)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.Password)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Dateadded)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Role)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="py-1">
                                                        @* @Html.DisplayFor(modelItem => item.Profilepicture) *@

                                                        @if (!string.IsNullOrEmpty(item.Profilepicture))
                                                        {
                                                            <img src="@item.Profilepicture" alt="Profile picture of @item.Fullname" class="profile-picture" />
                                                        }
                                                        else
                                                        {
                                                            <img src="/path/to/placeholder.jpg" alt="Default Profile Picture" class="profile-picture" />
                                                        }
                                                    </td>
                                                    <td class="py-1">
                                                        @Html.DisplayFor(modelItem => item.Fullname)
                                                    </td>
                                                    <td class="py-1">
                                                        @Html.DisplayFor(modelItem => item.Username)
                                                    </td>
                                                    <td class="py-1">
                                                        @Html.DisplayFor(modelItem => item.Email)
                                                    </td>
                                                    <td class="py-1">
                                                        @Html.DisplayFor(modelItem => item.Phone)
                                                    </td>
                                                    <td class="py-1">
                                                        @Html.DisplayFor(modelItem => item.Dateofbirth)
                                                    </td>
                                                    <td class="py-1">
                                                        @Html.DisplayFor(modelItem => item.Address)
                                                    </td>

                                                    @*  <td>
                                                @Html.DisplayFor(modelItem => item.Password)
                                                </td> *@
                                                    <td class="py-1">
                                                        @if (!string.IsNullOrEmpty(item.Password))
                                                        {
                                                            <span>********</span>
                                                        }
                                                        else
                                                        {
                                                            <span>No Password</span>
                                                        }
                                                    </td>

                                                    <td class="py-1">
                                                        @Html.DisplayFor(modelItem => item.Dateadded)
                                                    </td>
                                                    <td class="py-1">

                                                        @Html.DisplayFor(modelItem => item.Role.Rolename)
                                                    </td>



                                                    <td class="py-1">
                                                        <a asp-action="Edit" asp-route-id="@item.Userid">Edit</a> |
                                                        <a asp-action="Details" asp-route-id="@item.Userid">Details</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.Userid">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>

