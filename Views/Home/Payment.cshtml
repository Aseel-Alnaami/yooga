@model yogago.Models.Paymentinfo
@{
    Layout = "~/Views/Shared/_Home.cshtml";

}
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Payment</h2>
            </div>
            <div class="col-12">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Home" asp-action="Payment">Payment</a>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Class Start -->
    <div class="class">
	<div class="container">
        <div class="section-header text-center wow zoomIn" data-wow-delay="0.1s">

            <h2>Payment</h2>
            <p>All transactions are secure and encrypted.</p>
        </div>
        <div class="containerr">

        <div class="row">
            @{
                var plan = ViewBag.Plan as yogago.Models.Plan;
            }

            <h2>Payment</h2>
            <br />            <p>Price: $@plan.Price</p>
            <p>Plan: @plan.Planname</p>
<br />            <p>Price: $@plan.Price</p>
            <br />            <p>Price: $@plan.Price</p>
                <form asp-action="Payment" asp-controller="Home" method="post">
    <input type="hidden" name="PlanId" value="@ViewBag.Plan.Planid" />

                    <div class="row">
                        <!-- Billing Address Fields -->
                        <div class="column">
                            <h3 class="title">Billing Address</h3>
                            <div class="input-box">
                                <span>Full Name :</span>
                                <input type="text" name="Fullname" placeholder="Jacob Aiden" required>
                            </div>
                            <div class="input-box">
                                <span>Email :</span>
                                <input type="email" name="Email" placeholder="example@example.com" required>
                            </div>
                            <div class="input-box">
                                <span>Zip Code :</span>
                                <input type="text" name="Zipcode" placeholder="123 456" required>
                            </div>
                        </div>

                        <!-- Payment Fields -->
                        <div class="column">
                            <h3 class="title">Payment</h3>
                            <div class="input-box">
                                <span>Credit Card Number :</span>
                                <input type="text" name="Cardnumberencrypted" placeholder="1111 2222 3333 4444" required>
                            </div>
                            <div class="input-box">
                                <span>CVV :</span>
                                <input type="text" name="Cvvencrypted" placeholder="123" required>
                            </div>
                            <div class="flex">
                                <div class="input-box">
                                    <span>Exp. Month :</span>
                                    <input type="number" name="Expirymonth" placeholder="8" required>
                                </div>
                                <div class="input-box">
                                    <span>Exp. Year :</span>
                                    <input type="number" name="Expiryyear" placeholder="2025" required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn">Submit</button>
                </form>


	</div>
     </div>
     </div>


   

