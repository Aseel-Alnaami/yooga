@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = "~/Views/Shared/_Home.cshtml";

}



<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>About Us</h2>
            </div>
            <div class="col-12">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Home" asp-action="about">About Us</a>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- About Start -->
<div class="about wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-6">
                <div class="about-img">
                    <img src="~/HomeAssets/img/about.png" alt="Image">
                </div>
            </div>
            <div class="col-lg-7 col-md-6">
                <div class="section-header text-left">
                    <p>Learn About Us</p>
                    <h2>Welcome to YooGA Center</h2>
                </div>
                <div class="about-text">
                    <p>
                        Welcome to YooGA Center, your ultimate destination for physical and mental well-being. Founded in 2021 by Aseel Alnaami, YooGA Center is built on the passion for promoting health, mindfulness, and harmony in life. With a team of highly skilled trainers, we are committed to guiding you on your journey to a healthier and more balanced lifestyle.

                        
                    </p>
                    <p>
                        At YooGA Center, we believe in the transformative power of yoga. Yoga not only strengthens your body but also nurtures your mind and soul. It helps reduce stress, improves flexibility, enhances focus, and fosters inner peace. Our mission is to help you experience these life-changing benefits and empower you to live a more fulfilled and joyful life.

                        Join us today and discover the true essence of yoga at YooGA Center!
                    </p>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Username") == null)
                    {
                        <a class="btn" asp-controller="Login" asp-action="Login">Join now</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->

    
<!-- Team End -->